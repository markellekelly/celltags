{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "lib": ["DOM", "ES6"],
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "lib",
    "rootDir": "src",
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
